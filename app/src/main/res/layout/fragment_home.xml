<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    tools:context=".HomeFragment">

    <!-- Top Bar -->
    <TextView
        android:id="@+id/appNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BookLang"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="18dp"
        android:layout_marginStart="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_profile"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Profile" />

    <!-- File Upload Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/fileUploadCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/appNameTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card_blue_gradient"
            android:padding="18dp">

            <TextView
                android:id="@+id/fileUploadTitleTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Файлды жүктеу"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#222222"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/fileIconView"
                app:layout_constraintHorizontal_weight="1" />

            <TextView
                android:id="@+id/fileUploadDescTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Файлды жүктеп аудармасын алыңыз"
                android:textSize="14sp"
                android:textColor="#222222"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toBottomOf="@id/fileUploadTitleTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/fileIconView" />

            <Button
                android:id="@+id/fileUploadButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Жүктеу"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:backgroundTint="#111111"
                android:background="@drawable/bg_black_button"
                android:layout_marginTop="14dp"
                app:layout_constraintTop_toBottomOf="@id/fileUploadDescTextView"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/fileIconView"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_document"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:contentDescription="File Icon" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Tariff Title -->
    <TextView
        android:id="@+id/tariffTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Шексіз тариф"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#0047FF"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/fileUploadCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Free Tariff Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/freeTariffCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/tariffTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card_tariff_free"
            android:orientation="vertical"
            android:padding="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Тегін тариф"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\uD83D\uDD50 3 ежедневных попыток"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\uD83D\uDD39 Ограниченные размеры"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\u26A1 Медленный процесс"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Premium Tariff Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/premiumTariffCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/freeTariffCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card_tariff_premium"
            android:orientation="vertical"
            android:padding="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4990 тг/год"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\uD83D\uDFE2 Безлимитные попытки"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\uD83D\uDCC4 Перевод больших файлов"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\u26A1 Быстрый перевод"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Subscribe Button -->
    <Button
        android:id="@+id/subscriptionButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Жазылу"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:backgroundTint="#0047FF"
        android:background="@drawable/bg_button_blue_round"
        android:textSize="18sp"
        android:layout_marginTop="18dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/premiumTariffCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/homeNavButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:padding="12dp"
            android:tint="#0047FF"
            android:contentDescription="Home" />

        <ImageView
            android:id="@+id/libraryNavButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_library"
            android:padding="12dp"
            android:contentDescription="Library" />

        <ImageView
            android:id="@+id/flashcardNavButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_flashcard"
            android:padding="12dp"
            android:contentDescription="Flashcard" />

        <ImageView
            android:id="@+id/profileNavButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_profile"
            android:padding="12dp"
            android:contentDescription="Profile" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout> 