<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".FlashcardDetailFragment">

    <!-- Header: название книги -->
    <TextView
        android:id="@+id/bookTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Преступление и наказание. Ф. Достоевский"
        android:textColor="#222222"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="24dp"
        android:paddingHorizontal="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Карточка со словом -->
    <androidx.cardview.widget.CardView
        android:id="@+id/wordCardView"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/bookTitleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="32dp">

        <TextView
            android:id="@+id/wordTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Дверь"
            android:textColor="#6D3B2B"
            android:textSize="28sp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="#D9A88A" />
    </androidx.cardview.widget.CardView>

    <!-- Кнопка 'Сөзді сақтау' -->
    <Button
        android:id="@+id/saveWordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сөзді сақтау"
        android:textColor="#222222"
        android:background="@drawable/bg_button_outline"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/wordCardView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Стрелки навигации -->
    <LinearLayout
        android:id="@+id/navigationArrowsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/saveWordButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/prevButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:backgroundTint="#FFFFFF"
            android:background="@drawable/bg_circle"
            android:src="@drawable/ic_arrow_left"
            android:tint="#1976D2"
            android:contentDescription="Previous" />

        <Space
            android:layout_width="32dp"
            android:layout_height="0dp" />

        <ImageButton
            android:id="@+id/nextButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:backgroundTint="#FFFFFF"
            android:background="@drawable/bg_circle"
            android:src="@drawable/ic_arrow_right"
            android:tint="#1976D2"
            android:contentDescription="Next" />
    </LinearLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:gravity="center"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/homeNavButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:padding="12dp"
            android:contentDescription="Home" />

        <ImageView
            android:id="@+id/libraryNavButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_library"
            android:padding="12dp"
            android:contentDescription="Library" />

        <ImageView
            android:id="@+id/flashcardNavButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_flashcard"
            android:padding="12dp"
            android:tint="#1976D2"
            android:contentDescription="Flashcard" />

        <ImageView
            android:id="@+id/profileNavButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_profile"
            android:padding="12dp"
            android:contentDescription="Profile" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout> 