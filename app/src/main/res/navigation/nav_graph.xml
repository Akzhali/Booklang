<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.myapp.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpToInclusive="false" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.myapp.RegisterFragment"
        android:label="Register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.myapp.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_readerFragment"
            app:destination="@id/readerFragment" />
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_homeFragment_to_libraryFragment"
            app:destination="@id/libraryFragment" />
    </fragment>
    
    <fragment
        android:id="@+id/readerFragment"
        android:name="com.example.myapp.ReaderFragment"
        android:label="fragment_reader"
        tools:layout="@layout/fragment_reader">
        <action
            android:id="@+id/action_readerFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_readerFragment_to_libraryFragment"
            app:destination="@id/libraryFragment" />
        <argument
            android:name="bookId"
            android:defaultValue=""
            app:argType="string" />
        <argument
            android:name="bookTitle"
            android:defaultValue=""
            app:argType="string" />
        <argument
            android:name="bookFilePath"
            android:defaultValue=""
            app:argType="string" />
    </fragment>
    
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.myapp.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_profileFragment_to_profileEditFragment"
            app:destination="@id/profileEditFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_profileFragment_to_libraryFragment"
            app:destination="@id/libraryFragment" />
    </fragment>
    
    <fragment
        android:id="@+id/profileEditFragment"
        android:name="com.example.myapp.ProfileEditFragment"
        android:label="fragment_profile_edit"
        tools:layout="@layout/fragment_profile_edit">
        <action
            android:id="@+id/action_profileEditFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_profileEditFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpToInclusive="false" />
    </fragment>
    
    <fragment
        android:id="@+id/libraryFragment"
        android:name="com.example.myapp.LibraryFragment"
        android:label="fragment_library"
        tools:layout="@layout/fragment_library">
        <action
            android:id="@+id/action_libraryFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_libraryFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_libraryFragment_to_readerFragment"
            app:destination="@id/readerFragment" />
    </fragment>

    <fragment
        android:id="@+id/flashcardFragment"
        android:name="com.example.myapp.FlashcardFragment"
        android:label="fragment_flashcard"
        tools:layout="@layout/fragment_flashcard">
        <action
            android:id="@+id/action_flashcardFragment_to_flashcardDetailFragment"
            app:destination="@id/flashcardDetailFragment" />
        <action
            android:id="@+id/action_flashcardFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_flashcardFragment_to_libraryFragment"
            app:destination="@id/libraryFragment" />
        <action
            android:id="@+id/action_flashcardFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/flashcardDetailFragment"
        android:name="com.example.myapp.FlashcardDetailFragment"
        android:label="fragment_flashcard_detail"
        tools:layout="@layout/fragment_flashcard_detail">
        <argument
            android:name="word"
            app:argType="string" />
        <argument
            android:name="bookTitle"
            app:argType="string" />
        <action
            android:id="@+id/action_flashcardDetailFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_flashcardDetailFragment_to_libraryFragment"
            app:destination="@id/libraryFragment" />
        <action
            android:id="@+id/action_flashcardDetailFragment_to_flashcardFragment"
            app:destination="@id/flashcardFragment" />
        <action
            android:id="@+id/action_flashcardDetailFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
</navigation>